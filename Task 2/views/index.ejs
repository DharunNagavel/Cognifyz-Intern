<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Record</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-blue-100 flex items-center justify-center min-h-screen">

  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">
      Student Record Form
    </h2>

    <form action="/submit" method="POST" onsubmit="return validateForm()">

      <input id="name" name="name" type="text" placeholder="Student Name"
        class="w-full p-2 border rounded mb-3" />

      <input id="email" name="email" type="email" placeholder="Email"
        class="w-full p-2 border rounded mb-3" />

      <input id="roll" name="roll" type="text" placeholder="Roll Number"
        class="w-full p-2 border rounded mb-3" />

      <input id="age" name="age" type="number" placeholder="Age"
        class="w-full p-2 border rounded mb-3" />

      <select id="course" name="course"
        class="w-full p-2 border rounded mb-4">
        <option value="">Select Course</option>
        <option>BCA</option>
        <option>BSc</option>
        <option>BTech</option>
        <option>MCA</option>
      </select>

      <button type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
        Submit
      </button>

    </form>
  </div>

  <script>
    function validateForm() {
      let name = document.getElementById("name").value;
      let email = document.getElementById("email").value;
      let roll = document.getElementById("roll").value;
      let age = document.getElementById("age").value;
      let course = document.getElementById("course").value;

      if (!name || !email || !roll || !age || !course) {
        alert("All fields are required");
        return false;
      }

      if (!email.includes("@")) {
        alert("Invalid email");
        return false;
      }

      if (age < 16 || age > 60) {
        alert("Age must be between 16 and 60");
        return false;
      }

      return true;
    }
  </script>

</body>
</html>
